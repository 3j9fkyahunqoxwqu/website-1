= form_for post, url do |f|
  = f.error_messages

  p.input
    = f.label :title
    = f.text_field :title
  p.input
    = f.label :content
    = f.text_area :content, data: { behaviour: 'MarkdownEditor' }
  p.input
    = f.label :posted_at
    = f.datetime_local_field :posted_at

  = f.submit "Save"
